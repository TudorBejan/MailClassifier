.tictac-attach-droparea {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    border: 3px solid #2797da;
    font-family: Helvetica, sans-serif;
    font-size: 13px;
    z-index: 10000;
    background-color: rgb(225, 242, 254);
    background-color: rgba(225, 242, 254, 0.9);
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#e5e1f2fe, endColorstr=#e5e1f2fe);
}

.tictac-attach-droparea div {
    position: absolute;
    left: 0;
    right: 0;
    top: 30%;
    margin-top: -7px;
    text-align: center;
    font-weight:bold;
    color: #2797da;
}
